<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/teste"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    tools:context="com.luisalmeida.theblackbook.PanicButton$PlaceholderFragment" >

    <TextView
        android:id="@+id/textViewPanic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/textPanic"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/teste2" />

    <Button
        android:id="@+id/buttonPanicYes"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/textViewPanic"
        android:layout_below="@+id/textViewPanic"
        android:layout_marginTop="53dp"
        android:background="@color/Green"
        android:gravity="center"
        android:text="@string/buttonPanicYes"
        android:textColor="@color/White"
        android:onClick="panicYes" />

    <Button
        android:id="@+id/buttonPanicNo"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonPanicYes"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/buttonPanicYes"
        android:background="@color/Red"
        android:gravity="center"
        android:text="@string/buttonPanicNo"
        android:textColor="@color/White"
        android:onClick="panicNo" />

</RelativeLayout>
